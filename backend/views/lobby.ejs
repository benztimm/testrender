<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bingo Game</title>
    <link rel="stylesheet" href="css/lobby.css">
    <link rel="stylesheet" href="css/menu.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css">
</head>
<body>

    <%- include('partials/menu') %> 

    <section>
        <div class="lobbyBox">
            <div class="form">
                <form>
                    <div class="inputBx">
                        <input class="inp" type="text" id="roomNameInput" placeholder="Create a room" required>
                        <button alt="Create" class="btn buttonB" id="createRoomBtn">
                            <span style="--i: 2">C</span>
                            <span style="--i: 3">r</span>
                            <span style="--i: 4">e</span>
                            <span style="--i: 5">a</span>
                            <span style="--i: 6">t</span>
                            <span style="--i: 7">e</span>
                        </button>
                    </div>
					
                    <table id="roomsTable" class="tb">
                        <thead>
                            <tr>
                                <th>Room Name</th>
                                <th>Host</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody id="roomsList">
                            <!-- Rooms will be added here dynamically -->
                        </tbody>
                    
                    </table>
                </form>
            </div>
        </div>

        <!-- <div>
            <div class="image1">
                <img src="path_to_image1.jpg" alt="Image 1">
            </div>
            
            <div class="image2">
                <img src="path_to_image2.jpg" alt="Image 2">
            </div>
        </div> -->

        <%- include('partials/chat', { session: session, roomId: 'lobby' }) %>
    </section>


    <script src="/script/lobby.js"></script>
    <script src="/socket.io/socket.io.js"></script>
</body>
</html>
