<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Waiting Room - <%= roomDetails.room_name %></title>
    <link rel="stylesheet" type="text/css" href="/css/styles.css"/>
</head>
<body>
    <%- include('partials/navigation') %>
    <h1>Waiting Room</h1>
    <h2>Room: <%= roomDetails.room_name %>, Hosted by <%= host.username %></h2>

    <div id="players">
        <% players.forEach(function(player) { %>
            <div class="player" id="player-<%= player.user_id %>">
                <!-- Wrap username and readiness status in spans for easier manipulation -->
                <p><span id="username-<%= player.user_id %>"><%= player.username %></span> - <span id="status-<%= player.user_id %>">Not Ready</span></p>
                <% if (player.username === session.user.username) { %>
                    <button id="readyButton-<%= player.user_id %>" onclick="markReady('<%= roomDetails.room_id %>', '<%= player.user_id %>')">Ready</button>
                    <button onclick="exitRoom('<%= roomDetails.room_id %>', '<%= player.user_id %>')">Exit</button>
                <% } %>
            </div>
        <% }); %>
    </div>
    <%- include('partials/chat', { session: session, roomId: roomDetails.room_id }) %>
    <script src="/socket.io/socket.io.js"></script>
    <script src="/script/waiting-room.js"></script>

</body>
</html>
