{
  "compilerOptions": {
    "target": "ES6",                          
    "module": "commonjs",                     
    "rootDir": "./backend",                         
    "outDir": "./dist",                      
    "strict": true,                          
    "esModuleInterop": true,                 
    "skipLibCheck": true,                    
    "forceConsistentCasingInFileNames": true 
  },
  "include": [
    "backend/**/*.ts",
    "frontend/**/*.js"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}